{
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"],

  "compilerOptions": {
    "experimentalDecorators": true,
    "alwaysStrict": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": false,
    "sourceMap": true,
    "stripInternal": true,
    "noImplicitAny": true,

    "module": "es2015",
    "target": "es6",
    "lib": ["dom", "es2015"],
    "plugins": [
      {"name": "tslint-language-service"}
    ]
  }
}

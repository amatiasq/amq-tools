{
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"],

  "compilerOptions": {
    "experimentalDecorators": true,
    "alwaysStrict": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "stripInternal": true,
    "noImplicitAny": true,

    "lib": [ "dom", "es2015" ],
    "plugins": [{
      "name": "tslint-language-service"
    }]
  }
}
